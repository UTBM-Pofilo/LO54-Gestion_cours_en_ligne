<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="fr.utbm.lo54.project.core.entity.CourseSession" optimistic-lock="version" schema="LO54" table="COURSE_SESSION">
    <id name="id" type="int">
      <column name="ID"/>
      <generator class="assigned"/>
    </id>
    <property name="startDate" type="date">
      <column length="10" name="START_DATE" not-null="true"/>
    </property>
    <property name="endDate" type="date">
      <column length="10" name="END_DATE" not-null="true"/>
    </property>
    <property name="courseCode" type="string">
      <column length="8" name="COURSE_CODE"/>
    </property>
    <property name="locationId" type="int">
      <column name="LOCATION_ID" not-null="true"/>
    </property>
  </class>
</hibernate-mapping>
